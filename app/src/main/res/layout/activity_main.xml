<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


      <android.support.v7.widget.CardView

          xmlns:card_view="http://schemas.android.com/apk/res-auto"

          android:id="@+id/icon"

          android:layout_width="match_parent"
          android:layout_height="250dp"
          card_view:cardElevation="6dp"
          card_view:cardMaxElevation="10dp">

         <LinearLayout
             android:elevation="20dp"
             android:gravity="center_horizontal"
             android:background="@color/grey_300"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgProtection"
                android:layout_marginTop="5dp"
                android:src="@drawable/shieldon2"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#e74c3c"


                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="Disable Protection"
                fancy:fb_textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtSystem"
                android:layout_marginTop="15dp"
                android:textSize="30dp"
                android:layout_height="wrap_content" android:text="Border Secured"  android:textColor="@color/flatGreen" />











         </LinearLayout>
      </android.support.v7.widget.CardView>


      <LinearLayout
          android:layout_marginTop="5dp"
         android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


         <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/intrusions"
             xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="5dp"

                android:layout_marginLeft="10dp"

                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="10dp"


                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/icone"
                >
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <LinearLayout
                      android:layout_marginTop="5dp"
                      android:layout_width="match_parent"

                      android:gravity="center" android:orientation="vertical"
                      android:layout_height="wrap_content">


                     <android.support.v7.widget.AppCompatImageView
                         android:layout_marginTop="5dp"
                         android:src="@drawable/man2"
                         android:layout_width="60dp"
                         android:layout_height="60dp" />



                     <LinearLayout android:gravity="center"
                         android:layout_marginTop="5dp"

                         android:layout_width="match_parent"
                         android:layout_height="20dp">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INSTRUSIONS"
                           />


                     </LinearLayout>


                  </LinearLayout>




               </FrameLayout>



            </android.support.v7.widget.CardView>

            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/badge"


                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@id/icone"
                android:layout_marginLeft="-16dp"
                android:layout_marginTop="-8dp"
                android:layout_toRightOf="@id/icone"
                android:elevation="6dp"



                app:nbMaxTextLength="2" />

         </RelativeLayout>




         <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/track"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="5dp"

                android:layout_marginLeft="10dp"

                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="10dp"


                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/live"
                >
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <LinearLayout
                      android:layout_marginTop="5dp"
                      android:layout_width="match_parent"

                      android:gravity="center" android:orientation="vertical"
                      android:layout_height="wrap_content">


                     <android.support.v7.widget.AppCompatImageView
                         android:layout_marginTop="5dp"
                         android:src="@drawable/cctv2"
                         android:layout_width="60dp"
                         android:layout_height="60dp" />



                     <LinearLayout android:gravity="center"
                         android:layout_marginTop="5dp"

                         android:layout_width="match_parent"
                         android:layout_height="20dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE VIEW"
                            />


                     </LinearLayout>


                  </LinearLayout>




               </FrameLayout>



            </android.support.v7.widget.CardView>



         </RelativeLayout>


         <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/activities"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             xmlns:app="http://schemas.android.com/apk/res-auto">

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="5dp"

                android:layout_marginLeft="10dp"

                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="10dp"


                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/log"
                >
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                  <LinearLayout
                      android:layout_marginTop="5dp"
                      android:layout_width="match_parent"

                      android:gravity="center" android:orientation="vertical"
                      android:layout_height="wrap_content">


                     <android.support.v7.widget.AppCompatImageView
                         android:layout_marginTop="5dp"
                         android:src="@drawable/record"
                         android:layout_width="60dp"
                         android:layout_height="60dp" />



                     <LinearLayout android:gravity="center"
                         android:layout_marginTop="5dp"

                         android:layout_width="match_parent"
                         android:layout_height="20dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVITIES"
                            />


                     </LinearLayout>


                  </LinearLayout>




               </FrameLayout>



            </android.support.v7.widget.CardView>



         </RelativeLayout>


      </LinearLayout>

      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/settings"
          xmlns:app="http://schemas.android.com/apk/res-auto">

         <android.support.v7.widget.CardView
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             card_view:cardCornerRadius="5dp"

             android:layout_marginLeft="10dp"

             card_view:cardElevation="6dp"
             card_view:cardMaxElevation="10dp"


             android:layout_width="100dp"
             android:layout_height="120dp"

             >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <LinearLayout
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"

                   android:gravity="center" android:orientation="vertical"
                   android:layout_height="wrap_content">


                  <android.support.v7.widget.AppCompatImageView
                      android:layout_marginTop="5dp"
                      android:src="@drawable/settings"
                      android:layout_width="60dp"
                      android:layout_height="60dp" />



                  <LinearLayout android:gravity="center"
                      android:layout_marginTop="5dp"

                      android:layout_width="match_parent"
                      android:layout_height="20dp">

                     <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="SETTINGS"
                         />


                  </LinearLayout>


               </LinearLayout>




            </FrameLayout>



         </android.support.v7.widget.CardView>



      </RelativeLayout>





   </LinearLayout>

</android.support.constraint.ConstraintLayout>